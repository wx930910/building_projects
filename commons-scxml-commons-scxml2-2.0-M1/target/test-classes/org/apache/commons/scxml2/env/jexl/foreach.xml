<scxml xmlns="http://www.w3.org/2005/07/scxml" version="1.0">
  <datamodel>
    <data id="var1" expr="[1,2,3]"/>
    <data id="var2" expr="0"/>
  </datamodel>

  <state id="test">
    <onentry>
      <foreach item="var3" array="var1">
        <assign name="var2" expr="var2 + var3"/>
      </foreach>
    </onentry>
    <transition cond="var2==6" target="finished"/>
  </state>
  <final id="finished"/>
</scxml>
