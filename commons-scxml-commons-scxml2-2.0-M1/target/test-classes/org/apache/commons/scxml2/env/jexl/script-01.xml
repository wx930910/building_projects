<scxml xmlns="http://www.w3.org/2005/07/scxml"
       version="1.0"
       initial="script">

    <datamodel>
        <data id="x" expr="1"/>
    </datamodel>

    <state id="script">
        <datamodel>
            <data id="y" expr="2"/>
        </datamodel>
        <onentry>
            <script>
              x = y;
              y = 3 * 4;
              z = 'foo';
            </script>
            <assign name="z" expr="'bar'"/> <!-- z is defined by script -->
        </onentry>
        <transition target="end" cond="x eq 2 and y eq 12 and z eq 'bar'"/>
    </state>

    <final id="end"/>

</scxml>
